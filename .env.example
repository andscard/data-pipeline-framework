# Template de variables de entorno

# PostgreSQL
POSTGRES_DB=pipeline_db
POSTGRES_USER=admin
POSTGRES_PASSWORD=change_this_password_in_production

# Redis
REDIS_PASSWORD=change_this_redis_password

# Airflow
AIRFLOW_FERNET_KEY=generate_with_cryptography_fernet
AIRFLOW_SECRET_KEY=generate_random_secret_key
AIRFLOW__CORE__EXECUTOR=LocalExecutor

# API
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=INFO

# JWT Authentication
JWT_SECRET_KEY=generate_jwt_secret
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=30

# Simulation Settings
SIMULATION_MODE=true
DEFAULT_ATTACK_DELAY_MS=100
MAX_SIMULATION_DURATION_MINUTES=60
ENABLE_DESTRUCTIVE_ATTACKS=false

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change_grafana_password